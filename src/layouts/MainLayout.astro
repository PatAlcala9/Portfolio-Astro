<style lang="sass" is:global>
  @font-face
    font-family: 'Inter'
    src: url('../assets/fonts/Inter.woff2')

  @font-face
    font-family: 'Open Sans'
    src: url('../assets/fonts/OpenSans-Bold.woff2')

  .page
    padding: 0.5rem 1rem

  .text
    color: #ffffff

  .layout
    background: #0a1930
    position: absolute
    top: 0
    left: 0
    width: 100vw
    width: 100svw
    height: 100vh
    height: 100svh
    overflow: hidden
    cursor: none
    cursor: url('../assets/images/mouse3.webp') 32 32, auto

  .small
    width: 10px
    height: 10px
    border: 2px solid #fff
    border-radius: 50%
    pointer-events: none
</style>
