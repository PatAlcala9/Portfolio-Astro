---
const { title, pageDescription } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon2.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content=`${pageDescription} of Patrick Alvin Alcala` />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <script defer type="text/partytown" data-project="682d3f7f9756d54d9c487131" 
      data-host="https://analytics.patalcala.com" 
      data-port="80" 
      data-secure="true"
      src="https://cdn.jsdelivr.net/gh/litlyx/litlyx-js/browser/litlyx.js">
    </script>
  </head>

  <body class="layout">
    <slot />
  </body>
</html>

<style lang="sass" is:global>
  @font-face
    font-family: 'Inter'
    src: url('../assets/fonts/Inter.woff2') format('woff2')
    font-display: swap

  @font-face
    font-family: 'Open Sans'
    src: url('../assets/fonts/OpenSans-Bold.woff2') format('woff2')
    font-display: swap

  .page
    padding: 0.5rem 1rem

  .text
    color: #ffffff

  .layout
    background: #0a1930
    position: absolute
    top: 0
    left: 0
    width: 100vw
    width: 100svw
    height: 100vh
    height: 100svh
    overflow: auto
    cursor: url('../assets/images/mouse1.webp') 0 0, auto
    margin: 0
</style>
