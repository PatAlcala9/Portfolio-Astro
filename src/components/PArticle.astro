---
import { Image } from 'astro:assets'

const { title, subTitle, image, imageAlt } = Astro.props
---

<div class="article">
  <Image class="picture" src={image} alt={imageAlt} quality={'low'} />
  <span class="title">{title}</span>
  <span class="sub-title">{subTitle}</span>
</div>

<style lang="sass">
  $title: #aeb6c2
  $sub-title: #8296b7

  .article
    cursor: pointer
    border: 1px solid #008080
    width: 18rem
    display: flex
    flex-direction: column
    align-content: center
    justify-content: center
    align-items: center
    border-radius: 2rem
    transition: all 0.2s ease-in-out

  .article:hover
    box-shadow: 0px 0px 3rem 3rem rgba(0, 125, 125, 0.6)

  .picture
    width: 100%
    height: auto
    border-radius: 2rem 2rem 0 0

  .title
    font-family: Open Sans
    font-size: 0.9rem
    color: $title
    padding: 2rem 0 2rem 0
    width: 100%
    text-align: center

  .sub-title
    font-family: Inter
    font-size: 0.8rem
    color: $title
    padding: 0 0 2rem 0
    width: 94%
    text-align: center


  @media screen and (max-width: 1024px)
    .article
      width: 16rem

    .title
      font-size: 0.8rem
      padding: 1rem 0 1rem 0

    .sub-title
      font-size: 0.7rem
      padding: 0 0 1.5rem 0
</style>