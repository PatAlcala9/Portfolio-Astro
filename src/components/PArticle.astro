---
import { Image } from 'astro:assets'

const { title, subTitle, image, imageAlt } = Astro.props
---

<div class="article">
  <Image class="picture" src={image} alt={imageAlt} quality={'mid'} width={300}/>
  <span class="title">{title}</span>
  <span class="sub-title">{subTitle}</span>
</div>

<style lang="sass">
  $title: #aeb6c2
  $sub-title: #8296b7

  .article
    cursor: url('../assets/images/mouse2-32.webp') 0 0, auto
    border: 1px solid rgba(255, 255, 255, 0.1)
    width: 17rem
    height: 23rem
    display: flex
    flex-direction: column
    align-content: center
    justify-content: center
    align-items: center
    border-radius: 2rem
    backdrop-filter: blur(9px) saturate(100%)
    transition: all 0.5s ease-out

  .article:hover
    border: 1px solid $title
    box-shadow: 0px 0px 3rem 3rem rgba(41, 61, 92, 0.8)
    transform: scale(1.1)

  .picture
    position: absolute
    top: 0
    width: 100%
    height: auto
    border-radius: 2rem 2rem 0 0

  .title
    font-family: Open Sans
    font-size: 0.9rem
    color: $title
    padding: 2rem 0 2rem 0
    width: 90%
    text-align: left
    margin: 11rem 0 0 0

  .sub-title
    font-family: Inter
    font-size: 0.8rem
    color: $title
    padding: 0 0 2rem 0
    width: 94%
    text-align: left
    margin: 0 0 0 1rem

  @media screen and (max-width: 1024px)
    .article
      width: 16rem

    .title
      font-size: 0.8rem
      padding: 1rem 0 1rem 0

    .sub-title
      font-size: 0.7rem
      padding: 0 0 1.5rem 0
</style>
